<h1> NEW RECIPES </h1>


<%= form_with scope: :recipe, url: '/recipes', local: true do |form| %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :instructions %>
    <%= form.text_area :instructions %>
  </p>

  <p>
    <%= form.submit "Save Recipe" %>
  </p>
<% end %>

<h1> <%= link_to 'Back', root_path %> </h1>