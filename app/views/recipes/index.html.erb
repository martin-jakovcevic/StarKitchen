<div class="container has-background-black-ter">
  <div class="columns is-multiline has-background-black-ter">
    <div class="column is-4 is-offset-4">
      <div class="content is-size-2">
        <div class="card-content">
          Star Kitchen, Recipes!
        </div>
      </div>
    </div>

    <% @recipes.each do |recipe| %>
      <div class="column is-4 is-offset-4">
        <%= render recipe, instruction: true %>
      </div>
    <% end %>
  </div>
</div>

