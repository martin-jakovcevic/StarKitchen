<div class="column is-6 is-offset-3">
  <div class="content is-size-1">
    <%= headline %>
  </div>
</div>

<% if comment.errors.any? %>
  <div class="column is-6 is-offset-3">
    <article class="message is-dark">
      <div class="message-body">
        <p><%= pluralize(comment.errors.count, "error") %> prohibited this comment to be created:</p>
        <br>
        <p>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </p>
      </div>
    </article>
  </div>
<% end %>


<div class="column is-6 is-offset-3">
  <article class="media">
    <div class="media-content">
      <%= form_with model: [recipe, comment], local: true do |form| %>
        <div class="field">
          <p class="control">
            <%= form.text_area :body, class: "textarea", placeholder: "Add a comment...," %>
          </p>
        </div>
        <nav class="level">
          <div class="level-left">
          </div>
          <div class="level-right">
            <div class="level-item">
              <%= form.submit button_name, class: 'button is-light' %>
            </div>
            <div class="level-item">
              <%= link_to 'Back', recipe_path(recipe), class: "button is-light has-text-dark" %>
            </div>
          </div>
        </nav>
      <% end %>
    </div>
  </article>
</div>
